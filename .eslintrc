{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "plugins": [
    "react"
  ],
  "env": {
    "browser": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "pragma": "h",
      "version": "16.3.0"
    }
  },
  "rules": {
    "react/jsx-key": "error",
    "react/prop-types": "off",
    "linebreak-style": "off",
    "no-trailing-spaces": "error",
    "no-use-before-define": "error",
    "no-unused-vars": [
      "error",
      {
        "varsIgnorePattern": "^h$"
      }
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "semi": "error",
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "quotes": [
      "error",
      "single"
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxEOF": 1
      }
    ]
  }
}
